# HaniHome Australia - Production Environment
# Configuration for production environment

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=${AWS_RDS_PRODUCTION_URL}
DATABASE_HOST=${AWS_RDS_PRODUCTION_HOST}
DATABASE_PORT=5432
DATABASE_NAME=hanihome_au_production
DATABASE_USERNAME=${AWS_RDS_PRODUCTION_USERNAME}
DATABASE_PASSWORD=${AWS_RDS_PRODUCTION_PASSWORD}

# ===========================================
# Spring Boot Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=production
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api/v1

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=${AWS_SECRETS_MANAGER_JWT_SECRET}
JWT_EXPIRATION=43200000
JWT_REFRESH_EXPIRATION=259200000

# ===========================================
# OAuth Configuration (Production)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=${AWS_SECRETS_MANAGER_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${AWS_SECRETS_MANAGER_GOOGLE_CLIENT_SECRET}
GOOGLE_REDIRECT_URI=https://hanihome.com.au/auth/callback/google

# Kakao OAuth
KAKAO_CLIENT_ID=${AWS_SECRETS_MANAGER_KAKAO_CLIENT_ID}  
KAKAO_CLIENT_SECRET=${AWS_SECRETS_MANAGER_KAKAO_CLIENT_SECRET}
KAKAO_REDIRECT_URI=https://hanihome.com.au/auth/callback/kakao

# ===========================================
# AWS Configuration (Production)
# ===========================================
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# S3 Configuration
AWS_S3_BUCKET_ASSETS=hanihome-au-assets-prod
AWS_S3_BUCKET_BACKUPS=hanihome-au-backups-prod
AWS_S3_BUCKET_LOGS=hanihome-au-logs-prod

# Secrets Manager
AWS_SECRETS_MANAGER_SECRET_ARN=arn:aws:secretsmanager:ap-southeast-2:${AWS_ACCOUNT_ID}:secret:hanihome-au-production

# ===========================================
# Redis Configuration (ElastiCache)
# ===========================================
REDIS_HOST=${AWS_ELASTICACHE_PRODUCTION_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${AWS_ELASTICACHE_PRODUCTION_AUTH_TOKEN}
REDIS_DATABASE=0

# ===========================================
# Email Configuration (SES)
# ===========================================
MAIL_HOST=email-smtp.ap-southeast-2.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=${AWS_SES_SMTP_USERNAME}
MAIL_PASSWORD=${AWS_SES_SMTP_PASSWORD}
MAIL_FROM=noreply@hanihome.com.au

# ===========================================
# Frontend Configuration (Next.js)
# ===========================================
NEXT_PUBLIC_API_URL=https://api.hanihome.com.au/api/v1
NEXT_PUBLIC_APP_NAME=HaniHome Australia
NEXT_PUBLIC_APP_URL=https://hanihome.com.au
NEXT_PUBLIC_GOOGLE_CLIENT_ID=${AWS_SECRETS_MANAGER_GOOGLE_CLIENT_ID}
NEXT_PUBLIC_KAKAO_CLIENT_ID=${AWS_SECRETS_MANAGER_KAKAO_CLIENT_ID}

# ===========================================
# Monitoring & Analytics (Production)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=${GOOGLE_ANALYTICS_TRACKING_ID}

# Sentry Error Tracking
SENTRY_DSN=${SENTRY_PRODUCTION_DSN}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}
SENTRY_ENVIRONMENT=production

# ===========================================
# Security Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=https://hanihome.com.au,https://admin.hanihome.com.au
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ===========================================
# Rate Limiting (Strict)
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ===========================================
# Production Configuration
# ===========================================
DEBUG=false
LOG_LEVEL=warn
ENABLE_SWAGGER=false
ENABLE_ACTUATOR=true

# ===========================================
# SSL/TLS Configuration
# ===========================================
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=${SSL_KEYSTORE_PATH}
SERVER_SSL_KEY_STORE_PASSWORD=${SSL_KEYSTORE_PASSWORD}
SERVER_SSL_KEY_STORE_TYPE=PKCS12

# ===========================================
# CloudWatch & Monitoring
# ===========================================
CLOUDWATCH_LOG_GROUP=/aws/ec2/hanihome-au-production
CLOUDWATCH_LOG_STREAM=${AWS_INSTANCE_ID}
CLOUDWATCH_METRICS_ENABLED=true

# ===========================================
# Security Headers
# ===========================================
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff