# HaniHome Australia - Staging Environment
# Configuration for staging/testing environment

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=${AWS_RDS_STAGING_URL}
DATABASE_HOST=${AWS_RDS_STAGING_HOST}
DATABASE_PORT=5432
DATABASE_NAME=hanihome_au_staging
DATABASE_USERNAME=${AWS_RDS_STAGING_USERNAME}
DATABASE_PASSWORD=${AWS_RDS_STAGING_PASSWORD}

# ===========================================
# Spring Boot Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=staging
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api/v1

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=${AWS_SECRETS_MANAGER_JWT_SECRET}
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# OAuth Configuration (Staging)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=${AWS_SECRETS_MANAGER_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${AWS_SECRETS_MANAGER_GOOGLE_CLIENT_SECRET}
GOOGLE_REDIRECT_URI=https://staging.hanihome.com.au/auth/callback/google

# Kakao OAuth
KAKAO_CLIENT_ID=${AWS_SECRETS_MANAGER_KAKAO_CLIENT_ID}
KAKAO_CLIENT_SECRET=${AWS_SECRETS_MANAGER_KAKAO_CLIENT_SECRET}
KAKAO_REDIRECT_URI=https://staging.hanihome.com.au/auth/callback/kakao

# ===========================================
# AWS Configuration (Staging)
# ===========================================
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# S3 Configuration
AWS_S3_BUCKET_ASSETS=hanihome-au-assets-staging
AWS_S3_BUCKET_BACKUPS=hanihome-au-backups-staging
AWS_S3_BUCKET_LOGS=hanihome-au-logs-staging

# Secrets Manager
AWS_SECRETS_MANAGER_SECRET_ARN=arn:aws:secretsmanager:ap-southeast-2:${AWS_ACCOUNT_ID}:secret:hanihome-au-staging

# ===========================================
# Redis Configuration (ElastiCache)
# ===========================================
REDIS_HOST=${AWS_ELASTICACHE_STAGING_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${AWS_ELASTICACHE_STAGING_AUTH_TOKEN}
REDIS_DATABASE=0

# ===========================================
# Email Configuration (SES)
# ===========================================
MAIL_HOST=email-smtp.ap-southeast-2.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=${AWS_SES_SMTP_USERNAME}
MAIL_PASSWORD=${AWS_SES_SMTP_PASSWORD}
MAIL_FROM=noreply@staging.hanihome.com.au

# ===========================================
# Frontend Configuration (Next.js)
# ===========================================
NEXT_PUBLIC_API_URL=https://api.staging.hanihome.com.au/api/v1
NEXT_PUBLIC_APP_NAME=HaniHome Australia (Staging)
NEXT_PUBLIC_APP_URL=https://staging.hanihome.com.au
NEXT_PUBLIC_GOOGLE_CLIENT_ID=${AWS_SECRETS_MANAGER_GOOGLE_CLIENT_ID}
NEXT_PUBLIC_KAKAO_CLIENT_ID=${AWS_SECRETS_MANAGER_KAKAO_CLIENT_ID}

# ===========================================
# Monitoring & Analytics (Staging)
# ===========================================
# Google Analytics (Staging Property)
NEXT_PUBLIC_GA_ID=GA-STAGING-TRACKING-ID

# Sentry Error Tracking
SENTRY_DSN=${SENTRY_STAGING_DSN}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}
SENTRY_ENVIRONMENT=staging

# ===========================================
# Security Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=https://staging.hanihome.com.au,https://admin.staging.hanihome.com.au
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=200
RATE_LIMIT_BURST_SIZE=50

# ===========================================
# Production-like Configuration
# ===========================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_ACTUATOR=true

# ===========================================
# SSL/TLS Configuration
# ===========================================
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=${SSL_KEYSTORE_PATH}
SERVER_SSL_KEY_STORE_PASSWORD=${SSL_KEYSTORE_PASSWORD}
SERVER_SSL_KEY_STORE_TYPE=PKCS12