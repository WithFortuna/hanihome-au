# HaniHome Australia - Environment Variables Template
# Copy this file to .env.local, .env.development, .env.staging, or .env.production
# and fill in the actual values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/hanihome_au_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hanihome_au_dev
DATABASE_USERNAME=hanihome_user
DATABASE_PASSWORD=your_secure_password

# ===========================================
# Spring Boot Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=development
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api/v1

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# OAuth Configuration
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google

# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:3000/auth/callback/kakao

# ===========================================
# AWS Configuration
# ===========================================
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Configuration
AWS_S3_BUCKET_ASSETS=hanihome-au-assets-dev
AWS_S3_BUCKET_BACKUPS=hanihome-au-backups-dev
AWS_S3_BUCKET_LOGS=hanihome-au-logs-dev

# Secrets Manager
AWS_SECRETS_MANAGER_SECRET_ARN=arn:aws:secretsmanager:ap-southeast-2:account:secret:hanihome-au-dev

# ===========================================
# Redis Configuration (Optional)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ===========================================
# Email Configuration
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@hanihome.com.au

# ===========================================
# Frontend Configuration (Next.js)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_APP_NAME=HaniHome Australia
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_KAKAO_CLIENT_ID=your-kakao-client-id

# ===========================================
# Monitoring & Analytics
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=GA-TRACKING-ID

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ===========================================
# Security Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://hanihome.com.au
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# ===========================================
# Development/Debug Configuration
# ===========================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_ACTUATOR=true